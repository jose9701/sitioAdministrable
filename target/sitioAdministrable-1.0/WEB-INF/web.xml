<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>userController</servlet-name>
        <servlet-class>co.edu.ufps.sitioadministrable.controllers.userController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>agregarDinamico</servlet-name>
        <jsp-file>/seccion/agregarDinamico.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Menu</servlet-name>
        <jsp-file>/seccion/agregarMenu.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>EditarMenu</servlet-name>
        <jsp-file>/seccion/editarMenu.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Informacion</servlet-name>
        <jsp-file>/seccion/infomenu.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>EditarEvento</servlet-name>
        <jsp-file>/seccion/editarEvento.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Administrador</servlet-name>
        <jsp-file>/seccion/admin.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>/seccion/home.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Eventos</servlet-name>
        <jsp-file>/seccion/registrarEvento.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Noticias</servlet-name>
        <jsp-file>/seccion/registrarNoticia.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Novedades</servlet-name>
        <jsp-file>/seccion/registrarNovedad.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Consultar</servlet-name>
        <jsp-file>/seccion/consultar.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Editar</servlet-name>
        <jsp-file>/seccion/editarDinamico.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>infoController</servlet-name>
        <servlet-class>co.edu.ufps.sitioadministrable.controllers.infoController</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>info_vaieController</servlet-name>
        <servlet-class>co.edu.ufps.sitioadministrable.controllers.info_vaieController</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userController</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>infoController</servlet-name>
        <url-pattern>/infoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>info_vaieController</servlet-name>
        <url-pattern>/info_vaieController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agregarDinamico</servlet-name>
        <url-pattern>/seccion/agregar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Administrador</servlet-name>
        <url-pattern>/seccion/Administrador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/seccion/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Eventos</servlet-name>
        <url-pattern>/seccion/Eventos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Noticias</servlet-name>
        <url-pattern>/seccion/Noticias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Novedades</servlet-name>
        <url-pattern>/seccion/Novedades</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/Index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Menu</servlet-name>
        <url-pattern>/seccion/Menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Consultar</servlet-name>
        <url-pattern>/seccion/Consultar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Editar</servlet-name>
        <url-pattern>/seccion/Editar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Informacion</servlet-name>
        <url-pattern>/seccion/Informacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarEvento</servlet-name>
        <url-pattern>/seccion/EditarEvento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarMenu</servlet-name>
        <url-pattern>/seccion/EditarMenu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
